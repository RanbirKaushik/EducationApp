<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/choose_category"
        style="@style/ButtonBorder.DarkGey"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Choose Category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textColorLink="@color/DarkGrey"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/more"
        style="@style/ButtonBorder.DarkGey"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Group D More"
        android:layout_below="@+id/choose_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textColorLink="@color/DarkGrey"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/exam_notification"
        style="@style/ButtonBorder.DarkGey"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Exam Notification"
        android:layout_below="@+id/more"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textColorLink="@color/DarkGrey"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/about_us"
        style="@style/ButtonBorder.DarkGey"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="About Us.."
        android:layout_below="@+id/exam_notification"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textColorLink="@color/DarkGrey"
        android:textSize="30dp"/>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9508056847332120/1587482790"></com.google.android.gms.ads.AdView>

</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>